          - if current_page.data.author.present?
            .session_introduction
              - speakers.each do |speaker|
                - if speaker.name == current_page.data.author
                  .session_introduction_block
                    = image_tag speaker.profile_image_url, class: 'session_introduction_image'
                    .session_introduction_profileBlock
                      .session_introduction_profile
                        .session_introduction_title
