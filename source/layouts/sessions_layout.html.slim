doctype html

html
  head[prefix='og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#']
    = partial 'shared/head'

  body
    = partial 'shared/pre_body_scripts'

    = partial 'shared/common_header'

    .container.commonBody
      article.article[itemscope itemtype='http://schema.org/Article']
        h2.session_subtitle 
          | セッション情報
        .article_socialButtons.hidden-xs
          .article_tweetBtn
            a[href="https://twitter.com/share"
              class="twitter-share-button"
              data-url="#{page_url}"
              data-text="#{page_title}"
              data-related="pmconf"
              data-hashtags="pmconf"] Tweet
          .article_likeBtn
            .fb-like[data-href="#{page_url}"
                     data-layout="button_count"
                     data-action="like"
                     data-show-faces="false"
                     data-share="false"]
          .article_hatenaBtn
            a[href="http://b.hatena.ne.jp/entry/#{page_url}"
              class="hatena-bookmark-button"
              data-hatena-bookmark-title="#{page_title}"
              data-hatena-bookmark-layout="simple-balloon"
              title="このエントリーをはてなブックマークに追加"]
              img[src="https://b.st-hatena.com/images/entry-button/button-only@2x.png"
                  alt="このエントリーをはてなブックマークに追加"
                  width="20" height="20" style="border: none;"]
        h1.session_title[itemporp='name'] = current_page.data.title
        .session_speaker[itemprop='author' itemscope itemtype='http://schema.org/Person']
          - speakers.each do |speaker|
            - if speaker.name == current_page.data.author
              .session_speaker_block
                .session_speaker_names
                  .session_speaker_orgs
                    span.session_speaker_organization = speaker.organization
                    span.session_speaker_title = speaker.title
                  .session_speaker_name[itemprop='name'] = current_page.data.author
            - if speaker.name == current_page.data.co_author
              .session_speaker_block
                .session_speaker_names
                  .session_speaker_orgs
                    span.session_speaker_organization = speaker.organization
                    span.session_speaker_title = speaker.title
                  .session_speaker_name[itemprop='name'] = current_page.data.co_author
            - if speaker.name == current_page.data.co_author_2
              .session_speaker_block
                .session_speaker_names
                  .session_speaker_orgs
                    span.session_speaker_organization = speaker.organization
                    span.session_speaker_title = speaker.title
                  .session_speaker_name[itemprop='name'] = current_page.data.co_author_2
            - if speaker.name == current_page.data.co_author_3
              .session_speaker_block
                .session_speaker_names
                  .session_speaker_orgs
                    span.session_speaker_organization = speaker.organization
                    span.session_speaker_title = speaker.title
                  .session_speaker_name[itemprop='name'] = current_page.data.co_author_3

